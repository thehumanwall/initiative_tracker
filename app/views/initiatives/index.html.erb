<div id="initiatives" class="container">
    <h1>Initiatives</h1>
  
    <%= button_to "Add Initiative", new_initiative_path, :class => "btn btn-primary", :method => :get %>
  
    <div id="teams-table">
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Initiative Name</th>
            <th scope="col">Initiative Description</th>
          </tr>
        </thead>
        <tbody>
          <% @initiatives.each do |initiative| %>
          <tr>
            <td><%= link_to render(:partial => 'svg/pencilsquare'), edit_initiative_path(initiative) %></td>
            <td><%= initiative.name %></td>
            <td><%= initiative.description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>