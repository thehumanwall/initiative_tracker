<%= form_with model: team do |form| %>

<div class="row g-2">
  <div class="col-md">
    <div class="form-floating mb-3">
      <%= form.text_field :name, class: "form-control", required: true %>
      <%= form.label :name, class: "form-label" %>
    </div>
  </div>
  <div class="col-md">
    <div class="form-floating mb-3">
      <%= form.text_field :value, class: "form-control", required: true %>
      <%= form.label :value, class: "form-label" %>
    </div>
  </div>
</div>
<div class="row g-2">
  <div class="col-md">
    <div class="form-floating mb-3">
      <%= form.color_field :color_code, class: "form-control" %>
      <%= form.label :color_code, class: "form-label" %>
    </div>
  </div>
  <div class="col-md">
    <div class="form-floating mb-3">
      <%= form.select \
        :team_group_id, \
        options_for_select(@team_groups.map { |group| [group.name, group.id] }, selected: @team.team_group_id), \
        { :include_blank => true }, \
        { :class => "form-select", :required => true } \
      %>
      <%= form.label :team_group_id, class: "form-label" %>
    </div>
  </div>
</div>

<div>
  <% case action %>
  <% when :new %>
  <%= form.submit "Submit", class: "btn btn-primary" %>
  <%= link_to "Cancel", teams_path, class: "btn btn-danger" %>
  <% when :edit %>
  <%= form.submit "Update", class: "btn btn-primary" %>
  <%= link_to "Back", teams_path, class: "btn btn-secondary" %>
  <%= link_to "Delete", @team, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
  <% end %>
</div>
<% end %>